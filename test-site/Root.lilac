<script>
    let text = state("");

    const list = lstate([[123, "hi"], [123123, "h"]]);

    let key = 0;

    const add = () => {
	if (text.value.length == 0) return;

	posts.push({name: "hi", date: Date.now(), content: text.value})


	list.push([key++, text.value]);
	text.set(() => "");
    }

    const remove = (key) => {
	list.findAndRemove(([k, _]) => k === key);
    }


    const posts = lstate([{name: "jasper", date: 20, content: "YAAAAAY"},
    {name: "jasper", date: 99999, content: "UMM"}
    ]);
</script>

